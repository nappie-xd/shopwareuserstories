{% sw_extends '@Storefront/storefront/element/cms-element-image-gallery.html.twig' %}

{% block element_image_gallery_inner_items %}
    {{ parent() }}
    {% if page.product.customFields.product_detail_video_url %}
        <iframe width="560" height="315" 
            {# src="https://www.youtube.com/embed/AQXtrkUjgtI"  #}
            src="https://www.youtube.com/embed/{{ page.product.customFields.product_detail_video_url | split('=', 2)[1] }}"
            title="YouTube video player" frameborder="0" 
            allow="accelerometer; clipboard-write; encrypted-media; gyroscope">
        </iframe>
    {% endif %}
{% endblock %}

{% block element_image_gallery_inner_thumbnails_items %}
    {{ parent() }}

    {% if page.product.customFields.product_detail_video_url %} 
    
        <img class="gallery-slider-video-thumbnail-image js-load-image" 
            src="{{ asset('bundles/youtubedetail/assets/images/play-button.png') }}">
    {% endif %} 
{% endblock %}